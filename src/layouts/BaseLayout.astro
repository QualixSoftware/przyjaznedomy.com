---
import type { Locale, SEOMetadata } from '../types';
import { getLangFromUrl, getAlternateUrls, getHrefLang } from '../i18n/utils';
import { COMPANY, DEFAULT_SEO } from '../lib/constants';
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
  noindex?: boolean;
  structuredData?: any;
  bodyClass?: string;
}

const {
  title,
  description,
  ogImage = '/images/og/default.jpg',
  canonical,
  noindex = false,
  structuredData,
  bodyClass = ''
} = Astro.props;

const lang = getLangFromUrl(Astro.url) as Locale;
const alternateUrls = getAlternateUrls(Astro.url.pathname);
const seoTitle = title ? `${title} | ${COMPANY.name}` : DEFAULT_SEO[lang].title;
const seoDescription = description || DEFAULT_SEO[lang].description;
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site).toString();

// Organization structured data
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "RealEstateAgent",
  "name": COMPANY.legalName,
  "url": Astro.site?.toString(),
  "telephone": `+48 ${COMPANY.phone}`,
  "email": COMPANY.email,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": COMPANY.address,
    "addressLocality": COMPANY.city,
    "postalCode": COMPANY.zipCode,
    "addressCountry": "PL"
  }
};
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{seoTitle}</title>
    <meta name="description" content={seoDescription} />
    <link rel="canonical" href={canonicalURL} />
    
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Language Alternates -->
    <link rel="alternate" hreflang="pl" href={`${Astro.site}${alternateUrls.pl}`} />
    <link rel="alternate" hreflang="en" href={`${Astro.site}${alternateUrls.en}`} />
    <link rel="alternate" hreflang="de" href={`${Astro.site}${alternateUrls.de}`} />
    <link rel="alternate" hreflang="x-default" href={`${Astro.site}`} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={seoTitle} />
    <meta property="og:description" content={seoDescription} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={new URL(ogImage, Astro.site).toString()} />
    <meta property="og:locale" content={getHrefLang(lang)} />
    <meta property="og:site_name" content={COMPANY.name} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={seoTitle} />
    <meta name="twitter:description" content={seoDescription} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site).toString()} />
    
    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#4A7C59" />
    
    <!-- Preconnects for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Critical CSS (inline for performance) -->
    <style is:inline>
      /* Critical above-the-fold styles */
      body {
        margin: 0;
        font-family: 'Poppins', system-ui, -apple-system, sans-serif;
      }
      .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
      }
      @media (max-width: 768px) {
        .hero {
          min-height: 80vh;
        }
      }
    </style>
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    {structuredData && (
      <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}
    
    <!-- Alpine.js for interactivity -->
    <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/focus@3.x.x/dist/cdn.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.x.x/dist/cdn.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  
  <body class={`bg-white text-warm-gray-900 ${bodyClass}`}>
    <slot />
    
    <!-- Cookie Banner -->
    <div
      x-data="{ showCookies: !localStorage.getItem('cookies-accepted') }"
      x-show="showCookies"
      x-transition
      class="fixed bottom-0 left-0 right-0 bg-white shadow-2xl border-t border-warm-gray-200 z-50 safe-bottom"
    >
      <div class="container-custom py-4">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <p class="text-sm text-warm-gray-700">
            {lang === 'pl' ? 'Ta strona używa plików cookie, aby zapewnić najlepsze doświadczenia.' :
             lang === 'en' ? 'This site uses cookies to provide the best experience.' :
             'Diese Website verwendet Cookies, um das beste Erlebnis zu bieten.'}
          </p>
          <div class="flex gap-2">
            <button
              @click="localStorage.setItem('cookies-accepted', 'true'); showCookies = false"
              class="btn-primary text-sm"
            >
              {lang === 'pl' ? 'Akceptuję' : lang === 'en' ? 'Accept' : 'Akzeptieren'}
            </button>
            <a href={`${lang === 'pl' ? '' : `/${lang}`}/polityka-prywatnosci`} class="btn-secondary text-sm">
              {lang === 'pl' ? 'Więcej informacji' : lang === 'en' ? 'More information' : 'Weitere Informationen'}
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Analytics (only load if cookies accepted) -->
    <script>
      if (localStorage.getItem('cookies-accepted') === 'true') {
        // Cloudflare Web Analytics will be injected automatically
      }
    </script>
  </body>
</html>
