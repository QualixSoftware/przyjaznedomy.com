---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/layout/Navigation.astro';
import Footer from '../../components/layout/Footer.astro';
import PropertyCard from '../../components/property/PropertyCard.astro';
import housesData from '../../data/houses.json';

// Get filter params from URL
const url = new URL(Astro.request.url);
const statusFilter = url.searchParams.get('status') || 'all';
const sortBy = url.searchParams.get('sort') || 'price-asc';

// Filter houses
let filteredHouses = [...housesData];

if (statusFilter !== 'all') {
  filteredHouses = filteredHouses.filter(house => house.status === statusFilter);
}

// Sort houses
if (sortBy === 'price-asc') {
  filteredHouses.sort((a, b) => a.price - b.price);
} else if (sortBy === 'price-desc') {
  filteredHouses.sort((a, b) => b.price - a.price);
} else if (sortBy === 'area-asc') {
  filteredHouses.sort((a, b) => a.area - b.area);
} else if (sortBy === 'area-desc') {
  filteredHouses.sort((a, b) => b.area - a.area);
}

// Count by status
const statusCounts = {
  all: housesData.length,
  available: housesData.filter(h => h.status === 'available').length,
  reserved: housesData.filter(h => h.status === 'reserved').length,
  sold: housesData.filter(h => h.status === 'sold').length,
};
---

<BaseLayout 
  title="Dostępne domy - Osiedle Brzozowe Wzgórze"
  description="Zobacz wszystkie dostępne domy na Osiedlu Brzozowe Wzgórze w Brzezinach. Nowoczesna architektura, przestronne działki, doskonała lokalizacja."
>
  <Navigation />
  
  <main>
    <!-- Page Header -->
    <section class="bg-gradient-to-br from-birch-50 to-white py-12 md:py-16">
      <div class="container-custom">
        <h1 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold text-warm-gray-900 mb-4">
          Nasze domy
        </h1>
        <p class="text-lg text-warm-gray-700 max-w-3xl">
          Odkryj kolekcję nowoczesnych domów w skandynawskim stylu. Każdy dom został zaprojektowany z myślą o komforcie, funkcjonalności i harmonii z otaczającą naturą.
        </p>
      </div>
    </section>
    
    <!-- Filters Section -->
    <section class="bg-white border-b border-warm-gray-200 sticky top-16 z-20" x-data="{ showFilters: false }">
      <div class="container-custom py-4">
        <!-- Mobile Filter Toggle -->
        <button 
          @click="showFilters = !showFilters"
          class="md:hidden w-full flex items-center justify-between p-3 bg-warm-gray-50 rounded-soft mb-4"
        >
          <span class="font-medium">Filtry i sortowanie</span>
          <svg class="w-5 h-5 transform transition-transform" :class="{ 'rotate-180': showFilters }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        
        <!-- Filters Content -->
        <div class="md:flex md:items-center md:justify-between" :class="{ 'hidden': !showFilters, 'block': showFilters }">
          <!-- Status Filter -->
          <div class="flex flex-wrap gap-2 mb-4 md:mb-0">
            <a 
              href="/domy?status=all"
              class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
                statusFilter === 'all' 
                  ? 'bg-birch-500 text-white' 
                  : 'bg-warm-gray-100 text-warm-gray-700 hover:bg-warm-gray-200'
              }`}
            >
              Wszystkie ({statusCounts.all})
            </a>
            <a 
              href="/domy?status=available"
              class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
                statusFilter === 'available' 
                  ? 'bg-birch-500 text-white' 
                  : 'bg-warm-gray-100 text-warm-gray-700 hover:bg-warm-gray-200'
              }`}
            >
              Dostępne ({statusCounts.available})
            </a>
            <a 
              href="/domy?status=reserved"
              class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
                statusFilter === 'reserved' 
                  ? 'bg-birch-500 text-white' 
                  : 'bg-warm-gray-100 text-warm-gray-700 hover:bg-warm-gray-200'
              }`}
            >
              Zarezerwowane ({statusCounts.reserved})
            </a>
            <a 
              href="/domy?status=sold"
              class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
                statusFilter === 'sold' 
                  ? 'bg-birch-500 text-white' 
                  : 'bg-warm-gray-100 text-warm-gray-700 hover:bg-warm-gray-200'
              }`}
            >
              Sprzedane ({statusCounts.sold})
            </a>
          </div>
          
          <!-- Sort Dropdown -->
          <div class="relative">
            <select 
              onchange="window.location.href = `/domy?status=${statusFilter}&sort=` + this.value"
              class="appearance-none bg-white border border-warm-gray-300 rounded-soft px-4 py-2 pr-8 text-sm focus:ring-2 focus:ring-birch-500 focus:border-birch-500"
            >
              <option value="price-asc" selected={sortBy === 'price-asc'}>Cena: rosnąco</option>
              <option value="price-desc" selected={sortBy === 'price-desc'}>Cena: malejąco</option>
              <option value="area-asc" selected={sortBy === 'area-asc'}>Powierzchnia: rosnąco</option>
              <option value="area-desc" selected={sortBy === 'area-desc'}>Powierzchnia: malejąco</option>
            </select>
            <svg class="absolute right-2 top-1/2 transform -translate-y-1/2 w-4 h-4 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Properties Grid -->
    <section class="section-padding bg-warm-gray-50">
      <div class="container-custom">
        {filteredHouses.length > 0 ? (
          <>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              {filteredHouses.map((house) => (
                <PropertyCard house={house} />
              ))}
            </div>
            
            <!-- Results Summary -->
            <div class="mt-8 text-center text-sm text-warm-gray-600">
              Wyświetlanie {filteredHouses.length} z {housesData.length} domów
            </div>
          </>
        ) : (
          <div class="text-center py-12">
            <svg class="w-16 h-16 text-warm-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            <h2 class="text-xl font-semibold text-warm-gray-900 mb-2">
              Brak domów spełniających kryteria
            </h2>
            <p class="text-warm-gray-600 mb-6">
              Spróbuj zmienić filtry lub skontaktuj się z nami, aby dowiedzieć się o nowych ofertach.
            </p>
            <a href="/domy?status=all" class="btn-primary inline-flex items-center">
              Zobacz wszystkie domy
            </a>
          </div>
        )}
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="bg-gradient-to-br from-birch-50 to-white section-padding">
      <div class="container-custom text-center">
        <h2 class="font-serif text-2xl md:text-3xl font-bold text-warm-gray-900 mb-4">
          Nie znalazłeś idealnego domu?
        </h2>
        <p class="text-lg text-warm-gray-700 mb-8 max-w-2xl mx-auto">
          Skontaktuj się z nami, a pomożemy Ci znaleźć dom idealnie dopasowany do Twoich potrzeb.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:668374950" class="btn-primary justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Zadzwoń teraz
          </a>
          <a href="https://wa.me/48668374950" class="btn-whatsapp justify-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.149-.67.149-.197.297-.767.966-.94 1.164-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414-.074-.123-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            Napisz na WhatsApp
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
