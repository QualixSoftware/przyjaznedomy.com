---
import type { Locale } from '../../types';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { COMPANY } from '../../lib/constants';

export interface Props {
  houseId?: string;
  houseModel?: string;
  fixed?: boolean;
  className?: string;
}

const { houseId, houseModel, fixed = false, className = '' } = Astro.props;
const lang = getLangFromUrl(Astro.url) as Locale;
const t = useTranslations(lang);

// Prepare WhatsApp message
const getWhatsAppMessage = () => {
  const baseMessages = {
    pl: 'Dzień dobry, interesuje mnie',
    en: 'Hello, I am interested in',
    de: 'Guten Tag, ich interessiere mich für'
  };
  
  const propertyMessages = {
    pl: houseModel ? `dom ${houseModel}` : houseId ? `dom nr ${houseId}` : 'dom z Państwa oferty',
    en: houseModel ? `house ${houseModel}` : houseId ? `house ${houseId}` : 'a house from your offer',
    de: houseModel ? `Haus ${houseModel}` : houseId ? `Haus Nr. ${houseId}` : 'ein Haus aus Ihrem Angebot'
  };
  
  return `${baseMessages[lang]} ${propertyMessages[lang]}`;
};

const whatsappMessage = encodeURIComponent(getWhatsAppMessage());
const whatsappUrl = `https://wa.me/${COMPANY.whatsapp}?text=${whatsappMessage}`;
---

<div class={`contact-cta ${fixed ? 'fixed-cta' : ''} ${className}`}>
  <!-- WhatsApp Button -->
  <a 
    href={whatsappUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="btn-whatsapp flex-1 justify-center"
    aria-label={t('contact.whatsapp')}
  >
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.149-.67.149-.197.297-.767.966-.94 1.164-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414-.074-.123-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
    </svg>
    <span class="hidden sm:inline ml-2">{t('contact.whatsapp')}</span>
  </a>
  
  <!-- Call Button -->
  <a 
    href={`tel:${COMPANY.phone}`}
    class="btn-primary flex-1 justify-center"
    aria-label={t('contact.call')}
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
    </svg>
    <span class="hidden sm:inline ml-2">{t('contact.call')}</span>
  </a>
</div>

<style>
  .contact-cta {
    @apply flex gap-2;
  }
  
  .fixed-cta {
    @apply fixed bottom-4 left-4 right-4 z-30 md:hidden;
    @apply bg-white/95 backdrop-blur-sm p-3 rounded-soft shadow-lg;
  }
  
  @media (min-width: 768px) {
    .fixed-cta {
      @apply relative bottom-auto left-auto right-auto;
      @apply bg-transparent p-0 shadow-none;
    }
  }
</style>
