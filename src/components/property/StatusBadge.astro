---
import type { PropertyStatus, Locale } from '../../types';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

export interface Props {
  status: PropertyStatus;
  size?: 'small' | 'medium' | 'large';
  className?: string;
}

const { status, size = 'medium', className = '' } = Astro.props;
const lang = getLangFromUrl(Astro.url) as Locale;
const t = useTranslations(lang);

const statusClasses = {
  available: 'bg-green-100 text-green-800 border-green-200',
  reserved: 'bg-orange-100 text-orange-800 border-orange-200',
  sold: 'bg-red-100 text-red-800 border-red-200'
};

const sizeClasses = {
  small: 'px-2 py-0.5 text-xs',
  medium: 'px-3 py-1 text-sm',
  large: 'px-4 py-2 text-base'
};

const statusLabels = {
  available: t('property.available'),
  reserved: t('property.reserved'),
  sold: t('property.sold')
};

const statusIcons = {
  available: `<svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
  </svg>`,
  reserved: `<svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
  </svg>`,
  sold: `<svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
  </svg>`
};
---

<span 
  class={`inline-flex items-center gap-1.5 font-medium rounded-full border ${statusClasses[status]} ${sizeClasses[size]} ${className}`}
>
  <span class="inline-flex" set:html={statusIcons[status]} />
  <span>{statusLabels[status]}</span>
</span>
