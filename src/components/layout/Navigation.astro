---
import type { Locale } from '../../types';
import { getLangFromUrl, useTranslations, getLocalizedUrl, getLanguageName } from '../../i18n/utils';
import { COMPANY, NAVIGATION } from '../../lib/constants';

const lang = getLangFromUrl(Astro.url) as Locale;
const t = useTranslations(lang);
const currentPath = Astro.url.pathname;

// Generate navigation items with proper localization
const navItems = NAVIGATION.map(item => ({
  ...item,
  label: item.label[lang],
  href: lang === 'pl' ? item.href : `/${lang}${item.href}`,
  isActive: currentPath === (lang === 'pl' ? item.href : `/${lang}${item.href}`)
}));
---

<header class="sticky top-0 z-40 bg-white/95 backdrop-blur-md shadow-sm" x-data="{ mobileMenuOpen: false, langDropdownOpen: false }">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href={lang === 'pl' ? '/' : `/${lang}`} class="flex items-center space-x-2 z-50">
        <svg class="w-8 h-8 md:w-10 md:h-10 text-birch-500" viewBox="0 0 40 40" fill="currentColor">
          <path d="M20 5 L10 15 L10 30 L15 30 L15 20 L25 20 L25 30 L30 30 L30 15 Z"/>
          <path d="M18 2 L18 8 M22 2 L22 8" stroke="currentColor" stroke-width="2"/>
        </svg>
        <div class="flex flex-col">
          <span class="font-serif font-semibold text-lg md:text-xl text-warm-gray-900">{COMPANY.name}</span>
          <span class="text-xs text-warm-gray-600 hidden sm:block">Osiedle Brzozowe Wzg√≥rze</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-8">
        {navItems.map(item => (
          <a
            href={item.href}
            class={`font-medium transition-colors hover:text-birch-600 ${
              item.isActive ? 'text-birch-600' : 'text-warm-gray-700'
            }`}
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Right Side Actions -->
      <div class="flex items-center space-x-4">
        <!-- Language Switcher -->
        <div class="relative">
          <button
            @click="langDropdownOpen = !langDropdownOpen"
            @click.away="langDropdownOpen = false"
            class="flex items-center space-x-1 px-3 py-2 text-sm font-medium text-warm-gray-700 hover:text-birch-600 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
            </svg>
            <span class="hidden md:inline">{getLanguageName(lang)}</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          
          <div
            x-show="langDropdownOpen"
            x-transition:enter="transition ease-out duration-100"
            x-transition:enter-start="transform opacity-0 scale-95"
            x-transition:enter-end="transform opacity-100 scale-100"
            x-transition:leave="transition ease-in duration-75"
            x-transition:leave-start="transform opacity-100 scale-100"
            x-transition:leave-end="transform opacity-0 scale-95"
            class="absolute right-0 mt-2 w-40 rounded-soft bg-white shadow-lg ring-1 ring-black ring-opacity-5"
          >
            <div class="py-1">
              <a
                href={getLocalizedUrl(currentPath, 'pl')}
                class={`block px-4 py-2 text-sm ${lang === 'pl' ? 'bg-birch-50 text-birch-600' : 'text-warm-gray-700 hover:bg-warm-gray-50'}`}
              >
                Polski
              </a>
              <a
                href={getLocalizedUrl(currentPath, 'en')}
                class={`block px-4 py-2 text-sm ${lang === 'en' ? 'bg-birch-50 text-birch-600' : 'text-warm-gray-700 hover:bg-warm-gray-50'}`}
              >
                English
              </a>
              <a
                href={getLocalizedUrl(currentPath, 'de')}
                class={`block px-4 py-2 text-sm ${lang === 'de' ? 'bg-birch-50 text-birch-600' : 'text-warm-gray-700 hover:bg-warm-gray-50'}`}
              >
                Deutsch
              </a>
            </div>
          </div>
        </div>

        <!-- Call Button (Desktop) -->
        <a href={`tel:${COMPANY.phone}`} class="hidden md:flex items-center space-x-2 btn-primary">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span>{COMPANY.phoneFormatted}</span>
        </a>

        <!-- Mobile Menu Toggle -->
        <button
          @click="mobileMenuOpen = !mobileMenuOpen"
          class="lg:hidden p-2 rounded-soft text-warm-gray-700 hover:bg-warm-gray-100 transition-colors"
        >
          <div class="hamburger" :class="{ 'active': mobileMenuOpen }">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      x-show="mobileMenuOpen"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 -translate-y-4"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-4"
      @click.away="mobileMenuOpen = false"
      class="lg:hidden absolute left-0 right-0 top-16 bg-white border-t border-warm-gray-200 shadow-lg"
    >
      <div class="container-custom py-4">
        {navItems.map(item => (
          <a
            href={item.href}
            class={`block py-3 px-4 rounded-soft transition-colors ${
              item.isActive 
                ? 'bg-birch-50 text-birch-600 font-medium' 
                : 'text-warm-gray-700 hover:bg-warm-gray-50'
            }`}
          >
            {item.label}
          </a>
        ))}
        
        <!-- Mobile Contact Buttons -->
        <div class="mt-4 pt-4 border-t border-warm-gray-200 space-y-2">
          <a href={`tel:${COMPANY.phone}`} class="btn-primary w-full justify-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            {t('contact.call')}
          </a>
          <a href={`https://wa.me/${COMPANY.whatsapp}`} class="btn-whatsapp w-full justify-center">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.149-.67.149-.197.297-.767.966-.94 1.164-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414-.074-.123-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            {t('contact.whatsapp')}
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  .hamburger {
    @apply w-6 h-5 relative;
  }
  
  .hamburger span {
    @apply absolute left-0 w-full h-0.5 bg-current transition-all duration-300;
  }
  
  .hamburger span:nth-child(1) { @apply top-0; }
  .hamburger span:nth-child(2) { @apply top-1/2 -translate-y-1/2; }
  .hamburger span:nth-child(3) { @apply bottom-0; }
  
  .hamburger.active span:nth-child(1) {
    @apply top-1/2 -translate-y-1/2 rotate-45;
  }
  
  .hamburger.active span:nth-child(2) {
    @apply opacity-0;
  }
  
  .hamburger.active span:nth-child(3) {
    @apply bottom-1/2 translate-y-1/2 -rotate-45;
  }
</style>
