---
import type { Locale } from '../../types';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { ESTATE } from '../../lib/constants';

const lang = getLangFromUrl(Astro.url) as Locale;
const t = useTranslations(lang);

const ctaUrl = lang === 'pl' ? '/domy' : `/${lang}/houses`;
const contactUrl = lang === 'pl' ? '/kontakt' : `/${lang}/contact`;
---

<section class="hero relative bg-gradient-to-br from-birch-50 via-white to-wood-honey/20 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
      <pattern id="birch-pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
        <circle cx="10" cy="10" r="1" fill="currentColor" class="text-birch-500"/>
      </pattern>
      <rect width="100" height="100" fill="url(#birch-pattern)"/>
    </svg>
  </div>
  
  <div class="container-custom relative">
    <div class="grid lg:grid-cols-2 gap-12 items-center min-h-[80vh] lg:min-h-[90vh] py-20">
      <!-- Text Content -->
      <div class="animate-fade-in-up">
        <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl font-bold text-warm-gray-900 mb-6 leading-tight">
          {ESTATE.name[lang]}
        </h1>
        
        <p class="text-lg md:text-xl text-warm-gray-700 mb-8 leading-relaxed">
          {t('hero.subtitle')}
        </p>
        
        <div class="text-warm-gray-600 mb-10 space-y-3">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-birch-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>{lang === 'pl' ? 'Nowoczesne domy w skandynawskim stylu' : 
                   lang === 'en' ? 'Modern homes in Scandinavian style' : 
                   'Moderne Häuser im skandinavischen Stil'}</span>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-birch-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>{lang === 'pl' ? 'Przestronne działki od 500 do 1000 m²' : 
                   lang === 'en' ? 'Spacious plots from 500 to 1000 m²' : 
                   'Geräumige Grundstücke von 500 bis 1000 m²'}</span>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-birch-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>{lang === 'pl' ? 'Doskonała lokalizacja w Brzezinach' : 
                   lang === 'en' ? 'Excellent location in Brzeziny' : 
                   'Ausgezeichnete Lage in Brzeziny'}</span>
          </div>
        </div>
        
        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a href={ctaUrl} class="btn-primary text-lg px-8 py-4 justify-center">
            {t('hero.cta')}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href={contactUrl} class="btn-secondary text-lg px-8 py-4 justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            {t('hero.ctaSecondary')}
          </a>
        </div>
      </div>
      
      <!-- Image/Illustration -->
      <div class="relative animate-fade-in">
        <div class="relative rounded-soft overflow-hidden shadow-warm">
          <img 
            src="/images/hero/estate-main.jpg" 
            alt={ESTATE.name[lang]}
            class="w-full h-auto rounded-soft"
            loading="eager"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent pointer-events-none"></div>
        </div>
        
        <!-- Floating Stats Cards -->
        <div class="absolute -bottom-6 -left-6 bg-white rounded-soft shadow-lg p-4 animate-bounce-soft">
          <p class="text-3xl font-bold text-birch-600">{ESTATE.totalHouses}</p>
          <p class="text-sm text-warm-gray-600">
            {lang === 'pl' ? 'domów w ofercie' : 
             lang === 'en' ? 'homes available' : 
             'Häuser verfügbar'}
          </p>
        </div>
        
        <div class="absolute -top-6 -right-6 bg-white rounded-soft shadow-lg p-4 animate-bounce-soft" style="animation-delay: 0.5s">
          <p class="text-3xl font-bold text-birch-600">A+</p>
          <p class="text-sm text-warm-gray-600">
            {lang === 'pl' ? 'klasa energetyczna' : 
             lang === 'en' ? 'energy class' : 
             'Energieklasse'}
          </p>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-warm-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }
  
  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }
  
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
